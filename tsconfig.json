{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "lib": ["ES6", "dom", "dom.iterable"],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "strict": true,
        "target": "ESNext",
        "types": ["node"],
        "typeRoots": ["node_modules/@types", "src/types"],
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "global.d.ts",
        "src/**/*",
    ],
    "exclude": [
        "dist",
        "node_modules/**",
        "src/**/*.txt",
        "tsconfig.json"
    ]
}