{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": false,
        "lib": ["ES6", "dom", "dom.iterable"],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "resolveJsonModule": true,
        "strict": true,
        "target": "ES2021",
        "outDir": "dist"
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "global.d.ts",
        "src/**/*",
        "logos/**/*.svg", 
        "abis",
        "data"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "src/**/*.txt",
        "tsconfig.json"
    ]
}